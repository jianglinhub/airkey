doctype html
html
    head
        meta(content="text/html;charset=utf-8" http-equiv="content-type")
        meta(content="IE=Edge" http-equiv="X-UA-Compatible")
        title ne-base-dashboard
body
    .login_container
        .wrapper
            .header
                .brand
                .title
            form
                .account
                    .signInIcon.glyphicon.glyphicon-user
                    input(type="text" id="userName" class="signInInput" placeholder="请输入管理员账号")
                .password
                    .signInIcon.glyphicon.glyphicon-lock
                    input(type="password" id="password" class="signInInput" placeholder="请输入密码")
                .accoutOperation
                    .rememberAcc
                        .glyphicon.glyphicon-ok
                        a(href="#") 记住密码
                    .forgetPsd
                        a(href="#") 忘记密码
                .signInButton
                    input(type="button" id="submitBtn" class="loginButton" value="登录")